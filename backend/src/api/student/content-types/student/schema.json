{
  "kind": "collectionType",
  "collectionName": "students",
  "info": {
    "singularName": "student",
    "pluralName": "students",
    "displayName": "Student",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
    },
    "Email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "Password": {
      "type": "password",
      "required": false
    },
    "Birthday": {
      "type": "date",
      "required": true,
      "default": "2001-01-01"
    },
    "ProfilePicture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "CPF": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "([0-9]{2}[\\.]?[0-9]{3}[\\.]?[0-9]{3}[\\/]?[0-9]{4}[-]?[0-9]{2})|([0-9]{3}[\\.]?[0-9]{3}[\\.]?[0-9]{3}[-]?[0-9]{2})"
    },
    "RG": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Gender": {
      "type": "enumeration",
      "enum": [
        "Male",
        "Female",
        "Others"
      ],
      "required": true
    },
    "Phone": {
      "type": "string",
      "required": true,
      "regex": "^\\(?\\d{2}\\)?[-.\\s]?\\d{1}\\s?\\d{4,5}[-.\\s]?\\d{4}$"
    },
    "DisabledPerson": {
      "type": "enumeration",
      "enum": [
        "true",
        "false"
      ],
      "default": "false",
      "required": true
    },
    "Address": {
      "type": "string",
      "required": true
    },
    "LegalGuardianName": {
      "type": "string"
    },
    "LegalGuardianCPF": {
      "type": "string",
      "regex": "([0-9]{2}[\\.]?[0-9]{3}[\\.]?[0-9]{3}[\\/]?[0-9]{4}[-]?[0-9]{2})|([0-9]{3}[\\.]?[0-9]{3}[\\.]?[0-9]{3}[-]?[0-9]{2})"
    },
    "LegalGuardianEmail": {
      "type": "email"
    },
    "LegalGuardianRG": {
      "type": "string"
    },
    "DisabledPersonType": {
      "type": "string"
    },
    "LegalGuardianPhone": {
      "type": "string",
      "regex": "^\\(?\\d{2}\\)?[-.\\s]?\\d{1}\\s?\\d{4,5}[-.\\s]?\\d{4}$"
    }
  }
}
